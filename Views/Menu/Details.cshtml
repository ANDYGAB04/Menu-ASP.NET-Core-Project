@model Menu.Models.Dish
@{
	ViewData["Title"] = "Details";
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-lg">
				<div class="card-body">
					<!-- Title -->
					<h1 class="card-title text-center mb-4">@Model.Name</h1>

					<!-- Image -->
					<div class="text-center mb-4">
						<img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-width: 100%; max-height: 400px; object-fit: cover;" />
					</div>

					<!-- Price -->
					<div class="text-center mb-4">
						<h3 class="text-success">@Model.Price.ToString("N2") Dollars</h3>
					</div>

					<!-- Ingredients -->
					<div class="mb-4">
						<h4 class="mb-3">Ingredients:</h4>
						@if (Model.DishIngredients != null && Model.DishIngredients.Any())
						{
							<ul class="list-group">
								@foreach(var ingredient in Model.DishIngredients)
								{
									<li class="list-group-item">@ingredient.Ingredient.Name</li>
								}
							</ul>
						}
						else
						{
							<p class="text-muted">No ingredients listed.</p>
						}
					</div>

					<!-- Back Button -->
					<div class="text-center mt-4">
						<a class="btn btn-info btn-lg" asp-action="Index">← Back to Menu</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>