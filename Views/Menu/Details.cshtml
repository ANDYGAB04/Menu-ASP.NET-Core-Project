@model Menu.Models.Dish
@{
	ViewData["Title"] = "Details";
}

<div class=" container">
 <div class="justify-content-center d-flex">
	 <h3>Model.Name</h3>
 </div>
	<div class="d-flex justify-context-center">
		<img src="@Model.ImageUrl" style="width:70%" />
	</div>
	<div class="d-flex justify-context-center">
		@Model.Price.ToString("N2") Dollars
	</div>
	<div class="d-flex justify-context-center">
		Ingredients:
		<ul>
			@foreach(var ingredient in Model.DishIngredients)
			{
				<li>@ingredient.Ingredient.Name</li>
			}
		</ul>
	</div>
	<a class="btn btn-info" asp-action="Index">Back to Menu</a>


</div>